<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    table,
    th,
    td {
      border: 1px solid black;
    }
    th,
    td {
      padding: 10px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
  </style>
  <body>
    <h1>Category Breakdown with Subcategory Counts</h1>
    <table>
      <thead>
        <tr>
          <th>Category Name</th>
          <th>SubCategory Count</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function(item) { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.subCategory %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
